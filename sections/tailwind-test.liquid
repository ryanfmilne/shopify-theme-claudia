<!-- Tailwind CSS Test Section -->
<div class="section-container">
  <!-- Heading with Custom Font -->
  <h2 class="heading-primary text-center mb-8">
    {{ section.settings.heading }}
  </h2>

  <p class="body-text text-center max-w-2xl mx-auto mb-12">
    {{ section.settings.description }}
  </p>

  <!-- Brand Color Test - Pink Background -->
  <div class="bg-brand-pink text-white p-8 rounded-lg mb-8">
    <h3 class="text-2xl font-bold mb-4">Brand Pink Background</h3>
    <p class="text-white/90">
      This section demonstrates the custom brand-pink color (#FFB6C1) with white text.
    </p>
  </div>

  <!-- Responsive Grid with Fashion Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
    {% for i in (1..3) %}
      <div class="fashion-card">
        <div class="aspect-w-4 aspect-h-5 bg-brand-gray">
          <div class="flex items-center justify-center text-gray-400">
            Card {{ i }} Image
          </div>
        </div>
        <div class="p-6">
          <h3 class="heading-tertiary mb-2">Product {{ i }}</h3>
          <p class="body-text mb-4">Beautiful women's fashion item with premium quality.</p>
          <div class="flex gap-3">
            <button class="btn-primary flex-1">Add to Cart</button>
            <button class="btn-secondary flex-1">Quick View</button>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>

  <!-- Custom Button Components Test -->
  <div class="bg-white border-2 border-brand-gray rounded-lg p-8 mb-8">
    <h3 class="heading-secondary mb-6">Custom Button Components</h3>
    <div class="flex flex-wrap gap-4">
      <button class="btn-primary">Primary Button (Brand Pink)</button>
      <button class="btn-secondary">Secondary Button (Black Outline)</button>
    </div>
  </div>

  <!-- Utility Classes Test -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <!-- Spacing & Typography -->
    <div class="bg-white p-6 rounded-lg shadow-md">
      <h4 class="text-xl font-bold mb-4 text-brand-black">Spacing & Typography</h4>
      <ul class="space-y-2 text-gray-700">
        <li class="flex items-center gap-2">
          <span class="w-2 h-2 bg-brand-pink rounded-full"></span>
          Responsive padding and margins
        </li>
        <li class="flex items-center gap-2">
          <span class="w-2 h-2 bg-brand-pink rounded-full"></span>
          Custom font families (Playfair + Inter)
        </li>
        <li class="flex items-center gap-2">
          <span class="w-2 h-2 bg-brand-pink rounded-full"></span>
          Mobile-first responsive design
        </li>
      </ul>
    </div>

    <!-- Colors Test -->
    <div class="bg-white p-6 rounded-lg shadow-md">
      <h4 class="text-xl font-bold mb-4 text-brand-black">Brand Colors</h4>
      <div class="space-y-3">
        <div class="flex items-center gap-3">
          <div class="w-12 h-12 bg-brand-pink rounded-lg shadow-sm"></div>
          <div>
            <p class="font-semibold">Brand Pink</p>
            <p class="text-sm text-gray-500">#FFB6C1</p>
          </div>
        </div>
        <div class="flex items-center gap-3">
          <div class="w-12 h-12 bg-brand-black rounded-lg shadow-sm"></div>
          <div>
            <p class="font-semibold">Brand Black</p>
            <p class="text-sm text-gray-500">#1A1A1A</p>
          </div>
        </div>
        <div class="flex items-center gap-3">
          <div class="w-12 h-12 bg-brand-gray rounded-lg shadow-sm border border-gray-200"></div>
          <div>
            <p class="font-semibold">Brand Gray</p>
            <p class="text-sm text-gray-500">#F5F5F5</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Alpine.js Test (if using) -->
  <div class="mt-8 bg-brand-gray p-6 rounded-lg" x-data="{ open: false }">
    <button
      @click="open = !open"
      class="btn-primary w-full md:w-auto"
    >
      Toggle Alpine.js Test
    </button>
    <div x-show="open" x-cloak class="mt-4 p-4 bg-white rounded-lg">
      <p class="text-gray-700">
        âœ“ Alpine.js is working! The [x-cloak] directive is properly hidden until Alpine initializes.
      </p>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Tailwind Test Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Tailwind CSS is Working!"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "This test section demonstrates Tailwind CSS integration with custom brand colors, fonts, button components, and responsive utilities."
    }
  ],
  "presets": [
    {
      "name": "Tailwind Test Section"
    }
  ]
}
{% endschema %}
