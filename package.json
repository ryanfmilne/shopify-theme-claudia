{
  "name": "golden-west-shopify-theme",
  "version": "1.0.0",
  "description": "Women's fashion e-commerce Shopify theme with Tailwind CSS",
  "private": true,
  "scripts": {
    "build:css": "postcss src/tailwind.css -o assets/application.css",
    "watch:css": "postcss src/tailwind.css -o assets/application.css --watch",
    "dev": "npm-run-all --parallel watch:css theme:dev",
    "theme:dev": "shopify theme dev"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.0"
  },
  "keywords": [
    "shopify",
    "theme",
    "tailwind",
    "fashion",
    "ecommerce"
  ],
  "author": "Golden West",
  "license": "MIT"
}
